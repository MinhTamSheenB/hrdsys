procedure TFormSal03.DBGrid1KeyDown(Sender: TObject; var Key: Word;
  Shift: TShiftState);
{*************************************************************************
TO DO:快捷鍵設置
*************************************************************************}
begin
{if Shift=[ssCtrl] then
  begin
    if key=KEY_S then
      if BtnSubmit.Enabled then
        BtnSubmit.Click;
    if key=KEY_Z then
      if BtnCancel.Enabled then
        BtnCancel.Click;
    if key=VK_F4 then
      begin
        self.Close;
        self.Parent.Hide;
      end;
  end;
if Shift=[] then
  begin
    if key=VK_F2 then
      if BtnSubmit.Enabled then
        BtnSubmit.Click;
    if key=VK_F3 then
      DBGrid1.OnEditButtonClick(nil);
  end;  }
end;

