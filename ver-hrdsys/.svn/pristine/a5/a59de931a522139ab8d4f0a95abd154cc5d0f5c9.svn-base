  begin
    close;
    sql.clear;
    sql.Add(sqlstr+ConStr);
    open;
    totNum:=Fields[0].AsInteger;
    close;
  end;
  {sqlStr:='select * from hrd_dut_mon where dut_mon='''+me_month.text+''' and clas_code=''06'' ';
  ConStr:='select emp_id from hrd_emp where (epledt is null or epledt>='''+
